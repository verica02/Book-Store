@model Author

@{
    ViewData["Title"] = "Details";
}

<style>

    .DetailBtn {
        background-color: #dc143c;
        color: white;
    }

        .DetailBtn:hover {
            background-color: #fff;
            border: 1px solid red;
            color: #dc143c;
        }
</style>


<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1 style=" display:inline">Details for</h1>
            <h1 style=" display:inline; color: #dc143c;">@Model.FullName</h1>
        </p>

        <div class="row">
            <div class="col-md-8 offset-2">

                <div class="form-group">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" readonly />

                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" readonly />

                    <label asp-for="BirthDate" class="control-label"></label>
                    <input asp-for="BirthDate" class="form-control" readonly />

                    <label asp-for="Nationality" class="control-label"></label>
                    <input asp-for="Nationality" class="form-control" readonly />

                    <label asp-for="Gender" class="control-label"></label>
                    <input asp-for="Gender" class="form-control" readonly />

                    <label class="control-label">Books</label>
                    @if (Model.Books != null)
                    {
                        @foreach (var item in Model.Books)
                        {
                            <a asp-controller="Books" asp-action="Details" class="form-control" style="text-decoration: none" readonly asp-route-id="@item.Id">@item.Title</a>
                            <br />
                        }
                    }
                </div>
                <br />
                <div class="form-group">
                    <a class="btn DetailBtn" asp-action="Index">Show All</a>
                </div>
            </div>
        </div>
    </div>
</div>